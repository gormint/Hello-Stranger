<div id="map" class="hide"></div>

<div class="pure-u-11-12 pure-g centering" id="list-events-ul"></div>

<div id="chat-room"></div>

<div class="pure-u-1-12 pure-u-md-1-12 pure-u-lg-2-12"></div>
<!-- <div class="pure-u-10-12 pure-u-md-10-12 pure-u-lg-8-12"> -->

  <div class="pure-u-11-12 centering" id="historical-list-events-ul"></div>

  <div class="pure-u-11-12 centering">
    <div id="single-event">
      <ul id="list-event" class="list-none">
      </ul>
    </div> 
  </div>

  <script id="single-template" type="x-template-mustache">
    <div class="event-info" data-eventid="{{ eventid }}">
      <div id="api-description">
        <ul>
          <li>
            <div class="join-chat">
               <li class="title">{{ title }}</li>
               <form id="js-join-chat-form">
                <input type="hidden" name="title" value="{{ title }}">
                <input type="hidden" name="venueName" value="{{ venueName }}">
                <input type="hidden" name="venueLatitude" value={{ venueLatitude }}>
                <input type="hidden" name="venueLongitude" value={{ venueLongitude }}>
                <input type="hidden" name="startDate" value={{ startDate }}>
                <input type="hidden" name="lineupId" value="{{ lineupId }}">
                <input type="hidden" name="description" value="{{ description }}">
                <input type="hidden" name="imageUrl" value="{{ imageUrl }}">
                <input type="submit" class="pure-button pure-input-1-2 pure-button-primary button-width" value="Chat">   
               </form>
            </div>
          </li>
          <li class="description">{{ description }}</li>
        </ul>
      </div>
    </div>
  </script>

  <script id="list-template" type="x-template-mustache">
    <div class="pure-g">
      <div class="pure-u-3-4 list-info">
        <ul>
        <a href="#" class="js-events-li " data-eventid="{{ eventid }}">
          <li class="title">{{ title }}</li>
          <li class="address">{{ address }}</li>
        </a>
        </ul>
      </div>
      <div class="pure-u-1-4 list-distance">
        <a href="#" class="js-events-li" data-eventid="{{ eventid }}">
          <p>{{ distance }}<br>meters</p>
        </a>
      </div>
    </div>
  </script>

  <script id="historical-list-template" type="x-template-mustache">
    <div class="pure-g" data-eventObjectId="{{ eventObjectId }}">
      <div class="pure-u-3-4 list-info">
        <ul>
        <a href="/events/{{ eventObjectId }}">
          <li class="title">{{ title }}</li>
          <li class="name">{{ name }}</li>
        </a>
        </ul>
      </div>
      <div class="pure-u-1-4 list-date">
        <a href="/events/{{ eventObjectId }}">
          <p>{{ startDate }}</p>
        </a>
      </div>
    </div>
  </script>

  <script id="chat-room-template" type="x-template-mustache">
    <li class="chat-div-li">
      <span class="chat-penName">{{ author }}</span>
      <span class="chat-time">{{ date }}</span>
      <br><span class="chat-singleMessage">{{ content }}</span>
    </li>
  </script>

<script id="chat-container-template" type="x-template-mustache">
  <div class="">
    <div class="pure-g centering pure-u-11-12">
        <div class="chat-event-header align-right radius" style="background-image: url('{{ imageUrl }}');background-size: cover;background-position: center;">
          <p class="chat-p">Chat room for the event</p>
          <p class="chat-title">{{ title }}</p>
        </div>
    </div>
  </div>

  <div class="">
      <div class="pure-g centering pure-u-11-12">
        <div id="chat-div" class="chat-box radius border inner-shadow">
          <ul id="chat-div-ul" placeholder="There is nobody in this chat-room">
          </ul>
        </div>
      </div>
  </div>
  <div class="">
      <div class="pure-g centering pure-u-11-12">
        <form id="chat-box-form">
          <input  class="chat-form" id="message-from-form" autocomplete="off" />
          <button class="pure-button pure-input-1-2 pure-button-primary chat-button-width">Send</button>
        </form>
      </div>
  </div>
  <script src="/js/chat.js"></script>
</script>

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>
<script type="text/javascript" src="/js/main.js"></script>
